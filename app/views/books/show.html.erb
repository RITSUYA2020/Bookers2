<%= render 'layouts/header' %>

<div class="container">
	<div class="row">

			<% if [:notice] %>
	    		<p><%= flash[:notice] %></p>
	    	<% end %>

		<div class="col-xs-3">
			<%= render 'layouts/sidebar', user: @user, book: @new_book %>
		</div>

		<div class="col-xs-9">
			<h3>Book detail</h3>
				<table class="table">
					<thead>
						<tr>
							<th></th>
							<th></th>
							<th></th>
							<th></th>
							<th></th>
						</tr>
					</thead>
					<tbody>
						<tr>
							<td>
								<ul style="list-style: none;">
									<li>
										<%=link_to user_path(@user.id) do %>
											<%= attachment_image_tag @user, :profile_image, :fill, 40, 40, format:'jpeg',fallback: "no_image.jpg", size: '40' %>
											<p><%= @user.name %></p>
										<% end %>
									</li>
								</ul>
							</td>
							<td>
								<%=link_to book_path(@book.id) do %>
									<p><%= @book.title %></p>
								<% end %>
							</td>
							<td>
								<%= @book.body %>
							</td>
							<% if @book.user == current_user %>
							<td>
								<%=link_to "Edit", edit_book_path(@book) %>
							</td>
							<td>
								<%=link_to "Destroy", book_path, method: :delete, "data-confirm" => "本当に消しますか?" %>
							</td>
							<% end %>
						</tr>
					</tbody>
				</table>
	</div>
</div>

<footer>
	<div class="container">
		<div class="row">
			<div class="col-xs-3 col-xs-offset-9">
    			<p>CopyRight Infratop.inc</p>
    		</div>
    	</div>
    </div>
</footer>