<%= render 'layouts/header' %>

<div class="container">
	<p class="notice"><%= notice %></p>

	<div class="row">
		<div class="col-xs-3">
			<%= render 'layouts/sidebar', user: @user, book: @new_book %>
		</div>

	<div class="col-xs-9">
		<h3>Books</h3>
			<table class="table">
				<thead>
					<tr>
						<th></th>
						<th>Title</th>
						<th>Opinion</th>
					</tr>
				</thead>
				<tbody>
					<% @books.each do |book| %>
					<tr>
						<td>
							<%=link_to user_path(book.user.id) do %>
								<%= attachment_image_tag book.user, :profile_image, :fill, 40, 40, format:'jpeg',fallback: "no_image.jpg",size: '40' %>
							<% end %>
						</td>
						<td>
							<%=link_to book.title, book_path(book.id) %>
						</td>
						<td>
							<%= book.body %>
						</td>
					</tr>
					<% end %>
				</tbody>
			</table>
	</div>

</div>

<footer>
	<div class="container">
		<div class="row">
			<div class="col-xs-3 col-xs-offset-9">
    			<p>CopyRight Infratop.inc</p>
    		</div>
    	</div>
    </div>
</footer>

