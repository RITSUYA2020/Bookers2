<%= render 'layouts/header' %>

<div class="container">
	<div class="row">
		<div class="col-md-6 col-md-offset-3">

	<h2>Editing Book</h2>

	<%= form_for(@book) do |f| %>
	<%= render 'layouts/error_messages', model: f.object, book: @book %>
		<div class="field row">
			<label>Title</label>
			<br>
			<%= f.text_field :title, class: 'col-xs-12' %>
		</div>
		<div class="field row" style="margin-bottom: 5px">
			<label>Opinion</label>
			<br>
			<%= f.text_area :body, class: 'col-xs-12'  %>
		</div>
		<div class="actions row">
			<div class="center-block">
				<%= f.submit 'Update Book', class: 'btn btn-primary col-xs-12' %>
			</div>
		</div>

	<% end %>

	<%= link_to "Show", book_path(@book) %>
	<%= link_to "Back", books_path %>

</div>

<footer>
	<div class="container">
		<div class="row">
			<div class="col-xs-3 col-xs-offset-9">
    			<p>CopyRight Infratop.inc</p>
    		</div>
    	</div>
    </div>
</footer>