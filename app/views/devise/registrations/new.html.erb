<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <label for="inputName">Name</label>
    <%= f.text_field :name, autofocus: true, id:"inputName" %>
  </div>

  <div class="field">
    <label for="inputEmail">Email</label>
    <%= f.text_field :email, autofocus: true, id:"inputEmail" %>
  </div>

  <div class="field">
    <label for="inputPassword">Password(6 characters minimum)</label>
    <%= f.password_field :password, autocomplete: "off", id:"inputPassword" %>
  </div>

  <div class="field">
    <label for="inputConfirmPassword">Password confirmation</label>
    <%= f.password_field :password_confiemation, autocomplete: "off", id:"inputConfirmPassword" %>
  </div>

    <%= f.submit "Sign up" %>

<% end %>

<%= render "devise/shared/links" %>